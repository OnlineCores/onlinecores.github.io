{
  // VS Code Settings
  "vsicons.presets.angular": false,
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.wrappingColumn": -1,
  "editor.tabCompletion": true,
  "editor.folding": false,
  "editor.formatOnSave": true,

  // Automatically update extensions
  "extensions.autoUpdate": true,

  // VS Code icons
  "vsicons.associations.folders": [{
    "icon": "style",
    "extensions": ["stylesheets"],
    "filename": true,
    "format": "folder_type_style.svg"
  }, {
    "icon": "script",
    "extensions": ["javascripts"],
    "filename": true,
    "format": "folder_type_script.svg"
  }],

  // Exclude files and folders in the file tree
  "files.exclude": {
    "**/contributing*": true,
    "**/CONTRIBUTING*": true,
    "**/MAINTAINING*": true,
    "**/thankyou*": true,
    "**/.DS_Store": true,
    "**/.svn": true,
    "**/.hg": true
  },
  "asciidecorator.defaultFont": "Small"
}